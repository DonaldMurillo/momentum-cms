{
	"name": "plugins-analytics",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/plugins/analytics/src",
	"projectType": "library",
	"tags": ["scope:plugin"],
	"targets": {
		"test": {
			"executor": "@nx/vitest:test",
			"outputs": ["{workspaceRoot}/coverage/libs/plugins/analytics"],
			"options": {
				"config": "libs/plugins/analytics/vitest.config.ts"
			}
		},
		"build": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/plugins/analytics",
				"main": "libs/plugins/analytics/src/index.ts",
				"additionalEntryPoints": [
					"libs/plugins/analytics/src/lib/analytics-admin-routes.ts",
					"libs/plugins/analytics/src/lib/collectors/block-field-injector.ts",
					"libs/plugins/analytics/src/lib/client/tracker.ts",
					"libs/plugins/analytics/src/lib/page-view-tracker.ts"
				],
				"tsConfig": "libs/plugins/analytics/tsconfig.lib.json",
				"generatePackageJson": false,
				"assets": [
					"libs/plugins/analytics/package.json",
					{
						"input": "libs/plugins/analytics/src/lib",
						"glob": "analytics-admin-routes.d.ts",
						"output": "src/lib"
					},
					{
						"input": "libs/plugins/analytics/src/lib",
						"glob": "page-view-tracker.d.ts",
						"output": "src/lib"
					}
				],
				"external": ["@angular/*", "@ng-icons/*", "@momentumcms/ui"]
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}",
				"access": "public"
			}
		}
	}
}
