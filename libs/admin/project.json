{
	"name": "admin",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/admin/src",
	"prefix": "lib",
	"projectType": "library",
	"tags": ["scope:lib", "env:browser"],
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "libs/admin/ng-package.json",
				"tsConfig": "libs/admin/tsconfig.lib.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/admin/tsconfig.lib.prod.json"
				},
				"development": {}
			},
			"defaultConfiguration": "production",
			"dependsOn": ["^build"]
		},
		"copy-assets": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"cp LICENSE dist/libs/admin/",
					"cp libs/admin/tailwind.preset.js dist/libs/admin/",
					"node -e \"const fs=require('fs'),p=JSON.parse(fs.readFileSync('dist/libs/admin/package.json','utf8'));p.exports['./tailwind.preset']={default:'./tailwind.preset.js'};fs.writeFileSync('dist/libs/admin/package.json',JSON.stringify(p,null,2)+'\\n');\""
				]
			},
			"dependsOn": ["build"]
		},
		"nx-release-publish": {
			"dependsOn": ["copy-assets"],
			"options": {
				"packageRoot": "dist/{projectRoot}",
				"access": "public"
			}
		},
		"test": {
			"executor": "@nx/angular:unit-test",
			"options": {}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		}
	}
}
