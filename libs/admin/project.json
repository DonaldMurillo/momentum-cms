{
	"name": "admin",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/admin/src",
	"prefix": "lib",
	"projectType": "library",
	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},
	"tags": ["scope:lib"],
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "libs/admin/ng-package.json",
				"tsConfig": "libs/admin/tsconfig.lib.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/admin/tsconfig.lib.prod.json"
				},
				"development": {}
			},
			"defaultConfiguration": "production",
			"dependsOn": ["^build"]
		},
		"copy-assets": {
			"executor": "nx:run-commands",
			"options": {
				"commands": [
					"cp LICENSE dist/libs/admin/",
					"cp libs/admin/tailwind.preset.js dist/libs/admin/"
				]
			},
			"dependsOn": ["build"]
		},
		"nx-release-publish": {
			"dependsOn": ["copy-assets"],
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		},
		"test": {
			"executor": "@nx/angular:unit-test",
			"options": {}
		},
		"lint": {
			"executor": "@nx/eslint:lint"
		}
	}
}
