{
	"name": "db-drizzle",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/db-drizzle/src",
	"projectType": "library",
	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},
	"tags": [],
	"targets": {
		"test": {
			"executor": "@nx/vitest:test",
			"outputs": ["{workspaceRoot}/coverage/libs/db-drizzle"],
			"options": {
				"config": "libs/db-drizzle/vitest.config.ts"
			}
		},
		"build": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/db-drizzle",
				"main": "libs/db-drizzle/src/index.ts",
				"tsConfig": "libs/db-drizzle/tsconfig.lib.json",
				"assets": ["libs/db-drizzle/*.md"],
				"format": ["cjs"],
				"generatePackageJson": true
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		}
	}
}
