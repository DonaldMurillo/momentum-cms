{
	"name": "core",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/core/src",
	"projectType": "library",
	"tags": ["scope:lib", "env:universal"],
	"targets": {
		"test": {
			"executor": "@nx/vitest:test",
			"outputs": ["{workspaceRoot}/coverage/libs/core"],
			"options": {
				"config": "libs/core/vitest.config.ts"
			}
		},
		"build": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/core",
				"main": "libs/core/src/index.ts",
				"additionalEntryPoints": [
					"libs/core/src/generators/generator.ts",
					"libs/core/schematics/types/index.ts"
				],
				"tsConfig": "libs/core/tsconfig.lib.json",
				"assets": [
					"libs/core/schematics/collection.json",
					"libs/core/schematics/types/schema.json",
					"libs/core/schematics/types/schema.d.ts"
				]
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}",
				"access": "public"
			}
		}
	}
}
