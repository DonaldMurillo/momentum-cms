{
	"name": "plugin-otel",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/plugin-otel/src",
	"projectType": "library",
	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},
	"tags": [],
	"targets": {
		"test": {
			"executor": "@nx/vitest:test",
			"outputs": ["{workspaceRoot}/coverage/libs/plugin-otel"],
			"options": {
				"config": "libs/plugin-otel/vitest.config.ts"
			}
		},
		"build": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/plugin-otel",
				"main": "libs/plugin-otel/src/index.ts",
				"tsConfig": "libs/plugin-otel/tsconfig.lib.json",
				"assets": ["libs/plugin-otel/*.md"],
				"format": ["cjs"],
				"generatePackageJson": true
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		}
	}
}
