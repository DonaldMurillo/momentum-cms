{
	"name": "server-core",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/server-core/src",
	"projectType": "library",
	"release": {
		"version": {
			"manifestRootsToUpdate": ["dist/{projectRoot}"],
			"currentVersionResolver": "git-tag",
			"fallbackCurrentVersionResolver": "disk"
		}
	},
	"tags": ["scope:lib"],
	"targets": {
		"test": {
			"executor": "@nx/vitest:test",
			"outputs": ["{workspaceRoot}/coverage/libs/server-core"],
			"options": {
				"config": "libs/server-core/vitest.config.ts"
			}
		},
		"build": {
			"executor": "@nx/esbuild:esbuild",
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/libs/server-core",
				"main": "libs/server-core/src/index.ts",
				"tsConfig": "libs/server-core/tsconfig.lib.json"
			}
		},
		"nx-release-publish": {
			"options": {
				"packageRoot": "dist/{projectRoot}"
			}
		}
	}
}
